{
  "family": "my-task",
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "my-container",
      "image": "<ACCOUNT_ID>.dkr.ecr.us-east-1.amazonaws.com/my-backend-repo:${IMAGE_TAG}",
      "portMappings": [{ "containerPort": 3000, "protocol": "tcp" }],
      "essential": true
    }
  ]
}
